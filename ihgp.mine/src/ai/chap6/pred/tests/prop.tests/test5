#
# SOLVED PROBLEMS IN CHAPTER 3, PROPOSITIONAL CALCULUS, IN SCHAUM'S.
#
~P --> (Q --> R), ~P, Q;
|- R;
#
~P --> ~~Q, ~~~P;
|- Q;
#
P --> (Q && R), P;
|- P && Q;
#
P && Q;
|- Q && P;
#
(P && Q) --> ( R && S), ~~P, Q;
|- S;
#
P;
|- P && P;
#
P;
|- (P || Q) && (P || R);
#
P;
~~(P --> Q);
|- (R && S) || Q;
#
P;
|- P || P;
#
(P || Q) && (P || R), P --> S, Q --> S, P --> T, R --> T;
|- S && T;
#
P || P, P --> (Q && R);
|- R;
#
W <--> (S1 || S2), S2;
|- W;
#
P --> Q;
(P --> Q) --> (Q --> P);
|- (P <--> Q);
#
P <--> Q;
|- Q <--> P;
#
# SUPPLEMENTARY PROBLEMS V IN SCHAUMS, PAGE 70.
#
P <--> Q, Q <--> R;
|- P <--> R;
#
P <--> Q;
|- ~P <--> ~Q;
#
~P || Q;
|- ~(P && ~Q);
#
P --> Q, P --> ~Q;
|- ~P;
#
(P --> Q) && (P --> R);
|- P --> (Q && R);
#
P --> Q;
|- (P && R) --> (Q && R);
#
P --> Q;
|- (P || R) --> (Q || R);
#
~P --> P;
|- P;
#
~P;
|- P --> Q;
#
P && Q;
|- P --> Q;
#
# SUPPLEMENTARY PROBLEMS VI IN SCHAUMS, PAGE 71.
#
|- P --> P;
#
|- P --> (Q --> (P && Q));
#
|- ~(P <--> ~P);
#
|- (P --> Q) --> (~Q --> ~P);
#
|- (P && Q) || (~P || ~Q);
#
|- Q --> (P || ~P);
#
|- (P && ~P) --> Q;
#
|- P || (P --> Q);
#
|- ~P || (Q --> P);
#
|- (P --> Q) || (Q --> P);
#
# SUPPLEMENTARY PROBLEMS VII IN SCHAUMS, PAGE 71.
#
|- (P && Q) <--> ~(~P || ~Q);
#
|- (P || Q) <--> ~(~P && ~Q);
#
|- (P && Q) <--> ~(P --> ~Q);
#
|- (P || Q) <--> ~P --> Q;
#
|- P <--> ((P && Q) || (P && ~Q));
#
|- ~(P --> Q) <--> (P && ~Q);
#
|- (P <--> Q) <--> ((P && Q) || (~P && ~Q));
#
|- ~(P <--> Q) <--> ((~P && Q) || (P && ~Q));
#
|- (P && ~P) <--> (Q && ~Q);
#
|- (P || ~P) <--> (Q || ~Q);
#
quit;
